# Normalize text files to LF
* text=auto

# Treat the following as binary (no diff)
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.pdf binary
*.mp4 binary
*.mov binary
*.ttf binary
*.woff binary
*.woff2 binary

# Mark common config files as UTF-8 text
*.js text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.jsx text eol=lf
*.json text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.md text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.html text eol=lf
*.sh text eol=lf
*.cjs text eol=lf

# Lock language-specific lockfiles
package-lock.json merge=union
pnpm-lock.yaml merge=union
yarn.lock merge=union
