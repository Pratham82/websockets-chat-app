{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["apps/web/*"],
      "@/src/*": ["apps/web/src/*"],
      "@shared/*": ["packages/shared/*"]
    },
    "moduleResolution": "node",
    "target": "ES2020",
    "module": "CommonJS",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules"]
}
